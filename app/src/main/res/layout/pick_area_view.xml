<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="160dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/_rl_1"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="@dimen/dp_40">
    <TextView
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:text="60㎡以下"
            android:tag="60"
            android:gravity="center"
            android:id="@+id/area_1_tv"
            android:textSize="@dimen/sp_12"
            android:textColor="#7E7E7E"
            android:background="#FAFAFA"
            android:layout_margin="4dp"
        />
        <TextView
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:text="60-90㎡"
                android:tag="90"
                android:gravity="center"
                android:id="@+id/area_2_tv"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:background="#FAFAFA"
                android:layout_margin="4dp"
                />
        <TextView
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:text="90-120㎡"
                android:gravity="center"
                android:tag="120"
                android:background="#FAFAFA"
                android:id="@+id/area_3_tv"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:layout_margin="4dp"
                />
        <TextView
                android:layout_width="74dp"
                android:layout_height="29dp"
                android:text="120-150㎡"
                android:gravity="center"
                android:tag="150"
                android:id="@+id/area_4_tv"
                android:background="#FAFAFA"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:layout_margin="4dp"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:id="@+id/_rl_2"
            android:gravity="start"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/_rl_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="@dimen/dp_40">
        <TextView
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:text="150-180㎡"
                android:gravity="center"
                android:tag="180"
                android:background="#FAFAFA"
                android:id="@+id/area_5_tv"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:layout_margin="4dp" />
        <TextView
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:text="180-200㎡"
                android:gravity="center"
                android:id="@+id/area_6_tv"
                android:textSize="@dimen/sp_12"
                android:tag="200"
                android:background="#FAFAFA"
                android:textColor="#7E7E7E"
                android:layout_margin="4dp"
                />
        <TextView
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:text="200㎡以上"
                android:gravity="center"
                android:tag="1000"
                android:id="@+id/area_7_tv"
                android:textSize="@dimen/sp_12"
                android:background="#FAFAFA"
                android:textColor="#7E7E7E"
                android:layout_margin="4dp"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/_rl_2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp">
        <Button
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:text="重置"
                android:id="@+id/reset_btn"
        android:layout_marginRight="20dp"
        android:textColor="@color/color018"
        android:background="@drawable/c0185ff_button_background_solid"
        android:layout_marginEnd="20dp" />

        <Button
                android:layout_width="0dp"
                android:layout_height="32dp"
            android:background="@drawable/c0185ff_button_background"
            android:layout_weight="2"
                android:id="@+id/confirm_btn"
                android:textColor="@color/white"
                android:text="确认"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



