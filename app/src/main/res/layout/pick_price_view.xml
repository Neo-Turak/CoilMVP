<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="160dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/_rl_1"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:weightSum="3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="@dimen/dp_40">
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="0-100元/㎡"
                android:tag="100"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/price_1_tv"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:background="#FAFAFA"
                android:layout_marginStart="20dp"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="100-150元/㎡"
                android:tag="150"
                android:gravity="center"
                android:id="@+id/price_2_tv"
                android:textSize="@dimen/sp_12"
                android:layout_weight="1"
                android:textColor="#7E7E7E"
                android:background="#FAFAFA"
                android:layout_marginStart="20dp"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="150-200元/㎡"
                android:gravity="center"
                android:tag="200"
                android:background="#FAFAFA"
                android:id="@+id/price_3_tv"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/_rl_2"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/_rl_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:weightSum="3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="@dimen/dp_40">
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="200-300元/㎡"
                android:tag="300"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/price_4_tv"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:background="#FAFAFA"
                android:layout_marginStart="20dp"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="300-500元/㎡"
                android:tag="500"
                android:gravity="center"
                android:id="@+id/price_5_tv"
                android:textSize="@dimen/sp_12"
                android:layout_weight="1"
                android:textColor="#7E7E7E"
                android:background="#FAFAFA"
                android:layout_marginStart="20dp"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="500元/㎡以上"
                android:gravity="center"
                android:tag="1000"
                android:background="#FAFAFA"
                android:id="@+id/price_6_tv"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="#7E7E7E"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/_rl_2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp">
        <Button
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="重置"
                android:id="@+id/reset_btn"
                android:layout_marginRight="20dp"
                android:textColor="@color/color018"
                android:background="@drawable/c0185ff_button_background_solid"
                android:layout_marginEnd="20dp" />

        <Button
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="@drawable/c0185ff_button_background"
                android:layout_weight="2"
                android:id="@+id/confirm_btn"
                android:textColor="@color/white"
                android:text="确认"
                />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



